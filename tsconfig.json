{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "outFile": "./build/main.js",
    "sourceRoot": "./src/",
    "noEmit": true
  },
  "include": [
    "src"
  ],
  "lib": [
    "es2015"
  ]
}