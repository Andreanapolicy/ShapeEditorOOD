{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "moduleResolution": "node",
    "sourceMap": true,
    "declaration": true,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "outDir": "./build/"
  },
  "files": [
    "./web/script/main.ts"
  ],
  "exclude": [
    "./node_modules/"
  ],
  "lib": [
    "es2015",
    "dom"
  ]
}