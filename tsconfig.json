{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "outDir": "./build/",
    "noEmit": true
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "./node_modules/"
  ],
  "lib": [
    "es2015"
  ]
}